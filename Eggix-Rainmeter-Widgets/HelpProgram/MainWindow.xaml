<Window x:Class="HelpProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpProgram"
        mc:Ignorable="d"
        Title="图片查看器" Height="540" Width="960"
        ResizeMode="CanMinimize" SizeToContent="Manual" 
        Background="#0B94FF" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- 优化后的3D按钮样式 -->
        <Style x:Key="RaisedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F4CC46"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- 底部阴影层 -->
                            <Border 
                                Background="#F0B53F"
                                Margin="0,3,0,0"
                                CornerRadius="8"/>
                            <!-- 按钮主体 -->
                            <Border 
                                x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Margin="0,0,3,3">
                                <ContentPresenter 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- 鼠标悬停效果 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F7D967"/>
                            </Trigger>
                            <!-- 按钮按下效果 -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Margin" Value="3,3,0,0"/>
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#F0B53F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <!-- 主容器 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 图片显示区域 -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 上一张按钮 -->
            <Button Grid.Column="0" Content="上一张" 
                    x:Name="PreviousButton"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Width="80" Height="40" Margin="10"
                    FontSize="14" Style="{StaticResource RaisedButtonStyle}"/>

            <!-- 图片显示区域 -->
            <Viewbox Grid.Column="1" Stretch="Uniform" 
                     HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="CurrentImage" 
                       Source="https://nie.res.netease.com/r/pic/20241125/33578183-55ac-4a1c-9607-575b2ebb502d.jpg" 
                       Stretch="Uniform" 
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Viewbox>

            <!-- 下一张按钮 -->
            <Button Grid.Column="2" Content="下一张" 
                    x:Name="NextButton"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    Width="80" Height="40" Margin="10"
                    FontSize="14" Style="{StaticResource RaisedButtonStyle}"/>
        </Grid>

        <!-- 功能按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,20,0,20">
            <Button x:Name="MusicButton" Content="开启/关闭音乐" Width="120" Height="40"
                    FontSize="14" Margin="0,0,20,0" Style="{StaticResource RaisedButtonStyle}"/>
            <Button x:Name="HelpButton" Content="访问联机帮助" Width="120" Height="40"
                    FontSize="14" Margin="0,0,20,0" Style="{StaticResource RaisedButtonStyle}"/>
            <Button x:Name="CloseButton" Content="关闭窗口" Width="120" Height="40"
                    FontSize="14" Style="{StaticResource RaisedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
